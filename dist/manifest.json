{
	"manifest_version": 2,
	"name": "ZombifyTab-WebExtension",
	"version": "0.3.1",

	"applications": {
		"gecko": {
			"id": "ZombifyTab-WebExtension@email.com"
		}
	},
	
	"permissions": [
		"<all_urls>",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest"
	],

	"browser_action": {
		"default_title": "Zombify menu",
		"default_popup": "popupMenu.html"
	},
	
	"background": {
		"scripts": ["main.js"]
	},
	
	"web_accessible_resources": [
		"zombified.html",
		"zombified.css"
	]
}